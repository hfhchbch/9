TabButtons.Name = "TabButtons"
TabButtons.Size = UDim2.new(1, 0, 0, 50)
TabButtons.Position = UDim2.new(0, 0, 0, 40)
TabButtons.BackgroundTransparency = 1
TabButtons.Parent = MainFrame

