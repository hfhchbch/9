CoreGui:SetCore("SendNotification", {
    Title = "脚本",
    Text = "正在加载（反挂机已开启）",
    Duration = 5, 
})

-- 反挂机系统
local vu = game:GetService("VirtualUser")
game:GetService("Players").LocalPlayer.Idled:connect(function()
    vu:Button2Down(Vector2.new(0,0), workspace.CurrentCamera.CFrame)
    wait(1)
    vu:Button2Up(Vector2.new(0,0), workspace.CurrentCamera.CFrame)
end)

print("反挂机开启")

-- 创建标签页数据
local Tabs = {
    {
        Name = "Hub V10",
        Content = {}
    },
    {
        Name = "通用脚本", 
        Content = {}
    },
    {
        Name = "关于（必看）",
        Content = {}
    }
}

-- 创建标签按钮
local function CreateTabButton(tabName, index)
    local TabButton = Instance.new("TextButton")
    TabButton.Name = tabName .. "Tab"
    TabButton.Size = UDim2.new(0.3, 0, 1, 0)
    TabButton.Position = UDim2.new((index-1) * 0.33, 10, 0, 0)
    TabButton.BackgroundColor3 = index == 1 and Color3.fromRGB(70, 70, 70) or Color3.fromRGB(50, 50, 50)
    TabButton.Text = tabName
    TabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    TabButton.Font = Enum.Font.Gotham
    TabButton.TextSize = 14
    TabButton.Parent = TabButtons
    
    local TabCorner = Instance.new("UICorner")
    TabCorner.CornerRadius = UDim.new(0, 6)
    TabCorner.Parent = TabButton
    
    return TabButton
end

-- 创建信息标签
local function CreateInfoLabel(text)
    local Label = Instance.new("TextLabel")
    Label.Size = UDim2.new(1, 0, 0, 30)
    Label.BackgroundTransparency = 1
    Label.Text = text
    Label.TextColor3 = Color3.fromRGB(255, 255, 255)
    Label.TextXAlignment = Enum.TextXAlignment.Left
    Label.Font = Enum.Font.Gotham
    Label.TextSize = 14
    Label.Parent = ScrollingFrame
    
    return Label
end

-- 创建功能按钮
local function CreateFunctionButton(text, callback)
    local Button = Instance.new("TextButton")
    Button.Size = UDim2.new(1, 0, 0, 40)
    Button.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    Button.Text = text
    Button.TextColor3 = Color3.fromRGB(255, 255, 255)
    Button.Font = Enum.Font.Gotham
    Button.TextSize = 14
    Button.Parent = ScrollingFrame
    
    local ButtonCorner = Instance.new("UICorner")
    ButtonCorner.CornerRadius = UDim.new(0, 6)
    ButtonCorner.Parent = Button
    
    Button.MouseButton1Click:Connect(callback)
    
    return Button
end

-- 创建输入框
local function CreateTextbox(placeholder, callback)
    local TextboxFrame = Instance.new("Frame")
    TextboxFrame.Size = UDim2.new(1, 0, 0, 50)
    TextboxFrame.BackgroundTransparency = 1
    TextboxFrame.Parent = ScrollingFrame
    
    local Textbox = Instance.new("TextBox")
    Textbox.Size = UDim2.new(1, 0, 0, 30)
    Textbox.Position = UDim2.new(0, 0, 0, 20)
    Textbox.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
    Textbox.TextColor3 = Color3.fromRGB(255, 255, 255)
    Textbox.PlaceholderText = placeholder
    Textbox.Font = Enum.Font.Gotham
    Textbox.TextSize = 14
    Textbox.Parent = TextboxFrame
    
    local TextboxCorner = Instance.new("UICorner")
    TextboxCorner.CornerRadius = UDim.new(0, 6)
    TextboxCorner.Parent = Textbox
    
    Textbox.FocusLost:Connect(function(enterPressed)
        if enterPressed then
            callback(Textbox.Text)
            Textbox.Text = ""
        end
    end)
    
    return TextboxFrame
end

-- 创建切换开关
local function CreateToggle(text, default, callback)
    local ToggleFrame = Instance.new("Frame")
    ToggleFrame.Size = UDim2.new(1, 0, 0, 40)
    ToggleFrame.BackgroundTransparency = 1
    ToggleFrame.Parent = ScrollingFrame
    
    local ToggleLabel = Instance.new("TextLabel")
    ToggleLabel.Size = UDim2.new(0.7, 0, 1, 0)
    ToggleLabel.BackgroundTransparency = 1
    ToggleLabel.Text = text
    ToggleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    ToggleLabel.TextXAlignment = Enum.TextXAlignment.Left
    ToggleLabel.Font = Enum.Font.Gotham
    ToggleLabel.TextSize = 14
    ToggleLabel.Parent = ToggleFrame
    
    local ToggleButton = Instance.new("TextButton")
    ToggleButton.Size = UDim2.new(0, 50, 0, 25)
    ToggleButton.Position = UDim2.new(1, -50, 0.5, -12.5)
    ToggleButton.AnchorPoint = Vector2.new(1, 0.5)
    ToggleButton.BackgroundColor3 = default and Color3.fromRGB(0, 170, 255) or Color3.fromRGB(80, 80, 80)
    ToggleButton.Text = ""
    ToggleButton.Parent = ToggleFrame
    
    local ToggleCorner = Instance.new("UICorner")
    ToggleCorner.CornerRadius = UDim.new(0, 12.5)
    ToggleCorner.Parent = ToggleButton
    
    local ToggleCircle = Instance.new("Frame")
    ToggleCircle.Size = UDim2.new(0, 20, 0, 20)
    ToggleCircle.Position = default and UDim2.new(1, -25, 0.5, -10) or UDim2.new(0, 5, 0.5, -10)
    ToggleCircle.AnchorPoint = Vector2.new(1, 0.5)
    ToggleCircle.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    ToggleCircle.Parent = ToggleButton
    
    local CircleCorner = Instance.new("UICorner")
    CircleCorner.CornerRadius = UDim.new(0, 10)
    CircleCorner.Parent = ToggleCircle
    
    ToggleButton.MouseButton1Click:Connect(function()
        default = not default
        ToggleButton.BackgroundColor3 = default and Color3.fromRGB(0, 170, 255) or Color3.fromRGB(80, 80, 80)
        ToggleCircle.Position = default and UDim2.new(1, -25, 0.5, -10) or UDim2.new(0, 5, 0.5, -10)
        callback(default)
    end)
    
    return ToggleFrame
end

-- 切换标签页函数
local function SwitchTab(tabIndex)
    -- 清除当前内容
    for _, child in pairs(ScrollingFrame:GetChildren()) do
        if not child:IsA("UIListLayout") then
            child:Destroy()
        end
    end
    
    -- 更新标签按钮颜色
    for i, button in pairs(TabButtons:GetChildren()) do
        if button:IsA("TextButton") then
            button.BackgroundColor3 = i == tabIndex and Color3.fromRGB(70, 70, 70) or Color3.fromRGB(50, 50, 50)
        end
    end
    
    -- 添加新内容
    if tabIndex == 1 then -- Hub V10
        CreateInfoLabel("用户名: " .. Player.Name)
        CreateInfoLabel("注入器: " .. identifyexecutor())
        CreateInfoLabel("服务器ID: " .. game.GameId)
        
    elseif tabIndex == 2 then -- 通用脚本
        -- 功能按钮
        CreateFunctionButton("飞行", function()
            loadstring(game:HttpGet('https://rentry.co/shadiao_yazifly/raw'))()
        end)
        
        CreateFunctionButton("无限跳", function()
            loadstring(game:HttpGet("https://pastebin.com/raw/V5PQy3y0", true))()
        end)
        
        CreateFunctionButton("透视", function()
            loadstring(game:HttpGet('https://pastebin.com/raw/MA8jhPWT'))()
        end)
        
        -- 输入框
        CreateTextbox("移动速度 (默认: 16)", function(Value)
            if Player.Character and Player.Character:FindFirstChild("Humanoid") then
                Player.Character.Humanoid.WalkSpeed = tonumber(Value) or 16
            end
        end)
        
        CreateTextbox("跳跃高度 (默认: 50)", function(Value)
            if Player.Character and Player.Character:FindFirstChild("Humanoid") then
                Player.Character.Humanoid.JumpPower = tonumber(Value) or 50
            end
        end)
        
        -- 切换开关
        local Noclip = false
        local Stepped = nil
        
        CreateToggle("穿墙", false, function(Value)
            if Value then
                Noclip = true
                Stepped = game.RunService.Stepped:Connect(function()
                    if Noclip and Player.Character then
                        for _, child in pairs(Player.Character:GetChildren()) do
                            if child:IsA("BasePart") then
                                child.CanCollide = false
                            end
                        end
                    else
                        if Stepped then
                            Stepped:Disconnect()
                        end
                    end
                end)
            else
                Noclip = false
                if Stepped then
                    Stepped:Disconnect()
                end
            end
        end)
        
        CreateToggle("夜视", false, function(Value)
            if Value then
                game.Lighting.Ambient = Color3.new(1, 1, 1)
                game.Lighting.Brightness = 1
            else
                game.Lighting.Ambient = Color3.new(0, 0, 0)
                game.Lighting.Brightness = 0
            end
        end)
        
    elseif tabIndex == 3 then -- 关于（必看）
        CreateInfoLabel("版本: Hub V10 - 稳定版")
        CreateInfoLabel("功能特点:")
        CreateInfoLabel("• 多种实用脚本")
        CreateInfoLabel("• 稳定的反挂机系统") 
        CreateInfoLabel("• 用户友好的界面")
        
        CreateFunctionButton("复制作者联系方式", function()
            setclipboard("9178787891")
            -- 显示复制成功通知
            game:GetService("StarterGui"):SetCore("SendNotification",{
                Title = "复制成功",
                Text = "作者联系方式已复制到剪贴板",
                Duration = 3
            })
        end)
        
        CreateFunctionButton("清空剪贴板", function()
            setclipboard("")
            game:GetService("StarterGui"):SetCore("SendNotification",{
                Title = "清空成功", 
                Text = "剪贴板已清空",
                Duration = 3
            })
        end)
    end
end

-- 创建标签按钮并绑定事件
for i, tab in ipairs(Tabs) do
    local button = CreateTabButton(tab.Name, i)
    button.MouseButton1Click:Connect(function()
        SwitchTab(i)
    end)
end

-- 关闭按钮事件
CloseButton.MouseButton1Click:Connect(function()
    ScreenGui.Enabled = false
end)

-- 使窗口可拖动
local dragging
local dragInput
local dragStart
local startPos

local function update(input)
    local delta = input.Position - dragStart
    MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

TitleBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = MainFrame.Position
        
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

TitleBar.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

game:GetService("UserInputService").InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        update(input)
    end
end)

-- 初始化显示第一个标签页
SwitchTab(1)

-- 添加到玩家GUI
ScreenGui.Parent = PlayerGui

-- 加载完成通知
wait(1)
game:GetService("StarterGui"):SetCore("SendNotification",{
    Title = "加载完成",
    Text = "脚本已成功加载！",
    Duration = 5
})

print("脚本加载完成")
