local Window = VegaX:Window({
    Name = "脚本 Hub V10",
    Accent = Color3.fromRGB(0, 170, 255)
})

-- 创建标签页
local MainTab = Window:Tab("主页")
local SettingsTab = Window:Tab("设置")

-- 主页标签页
MainTab:Section("玩家信息")
MainTab:Label("用户名: " .. game.Players.LocalPlayer.Name)
MainTab:Label("注入器: " .. identifyexecutor())
MainTab:Label("服务器ID: " .. game.GameId)

MainTab:Section("通用功能")
MainTab:Button("飞行", function()
    loadstring(game:HttpGet('https://rentry.co/shadiao_yazifly/raw'))()
end)

MainTab:Button("无限跳", function()
    loadstring(game:HttpGet("https://pastebin.com/raw/V5PQy3y0", true))()
end)

MainTab:Slider("移动速度", 16, 500, 16, function(Value)
    if game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("Humanoid") then
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value
    end
end)

MainTab:Slider("跳跃高度", 50, 500, 50, function(Value)
    if game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("Humanoid") then
        game.Players.LocalPlayer.Character.Humanoid.JumpPower = Value
    end
end)

MainTab:Toggle("穿墙模式", false, function(Value)
    Noclip = Value
end)

MainTab:Toggle("夜视模式", false, function(Value)
    if Value then
        game.Lighting.Ambient = Color3.new(1, 1, 1)
    else
        game.Lighting.Ambient = Color3.new(0, 0, 0)
    end
end)

-- 设置标签页
SettingsTab:Section("关于")
SettingsTab:Button("复制作者联系方式", function()
    setclipboard("9178787891")
    VegaX:Notification("复制成功", "作者联系方式已复制")
end)

SettingsTab:Button("清空剪贴板", function()
    setclipboard("")
    VegaX:Notification("清空成功", "剪贴板已清空")
end)

-- 初始化
VegaX:Ready()
